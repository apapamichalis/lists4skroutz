<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-4 col-md-4">
      <h1>My Lists</h1>

      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
          <tr>
            <th> List Name </th>
            <th> Status </th>
          </tr>
        </thead>

        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <td><%= list.name %> </td>
              <td><%= list.active ? "active": "inacative" %> </td>
              <td><%= link_to 'Show', user_list_path(id: list.id) %></td>
              <td><%= link_to 'Edit', edit_user_list_path(id: list.id) %></td>
              <td><% if current_user.likes?(list) %>
                    <%= link_to 'Unlike', user_list_vote_path(list_id: list.id), method: :delete %> 
                  <% end %>
              </td>
              <td><% if !current_user.likes?(list) %>
                  <%= link_to 'Like', user_list_vote_path(list_id: list.id), method: :post%>
                  <% end %> 
              </td>
              <td><%= list.votes.count() %> </td>
              <td><%= link_to 'Destroy', user_list_path(id: list.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

<%= link_to 'New List', new_user_list_path %>
</div>


