<%= form_for(current_user.active_relationships.build) do |f| %>
  <div><%= hidden_field_tag :followee_id, @user.id %></div>
  <%= f.submit "Follow", class: "btn btn-primary" %>
<% end %>





# Follow/Unfollow botton

    
<tr>
              <div id="follow_form">
              <% if current_user.following?(@user) %>
                <%= render 'unfollow' %>
              <% else %>
                <%= render 'follow' %>
              <% end %>
              </div>
  

            </tr>